pkgname=secnote
pkgver=1
pkgrel=1
pkgdesc="Secure note taking"
arch=('any')
url="https://github.com/maandree/$pkgname"
license=('GNUAllPermissiveLicense')
depends=('gnupg')
provides=($pkgname)
conflicts=($pkgname)
source=($url/tarball/$pkgver)
md5sums=(04362e325abaef8ff947d259cffebb7c)

build() {
  cd maandree-${pkgname}-*
  make -B DESTDIR="$pkgdir/"
}

package() {
  cd maandree-${pkgname}-*
  make DESTDIR="$pkgdir/" install
}

